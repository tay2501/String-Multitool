{
  "daemon_mode": {
    "enabled": true,
    "auto_start": false,
    "check_interval": 1.0,
    "max_clipboard_size": 1048576,
    "log_level": "INFO",
    "log_file": "logs/daemon.log",
    "pid_file": "daemon.pid"
  },
  "auto_transformation": {
    "enabled": true,
    "default_rules": [],
    "rule_presets": {
      "1": "/t",
      "2": "/fh",
      "3": "/hf",
      "4": "/hu",
      "5": "/uh",
      "6": "/si"
    },
    "active_preset": "",
    "custom_rules": []
  },
  "clipboard_monitoring": {
    "enabled": true,
    "ignore_empty": true,
    "ignore_duplicates": true,
    "ignore_patterns": [
      "^\\s*$",
      "^https?://",
      "^[a-fA-F0-9]{32,}$"
    ],
    "min_length": 1,
    "max_length": 10000
  },
  "notifications": {
    "enabled": true,
    "show_transformations": true,
    "show_errors": true,
    "sound_enabled": false
  },
  "hotkeys": {
    "enabled": false,
    "toggle_daemon": "ctrl+shift+t",
    "apply_preset": "ctrl+shift+a",
    "show_status": "ctrl+shift+s"
  },
  "sequence_hotkeys": {
    "enabled": true,
    "sequences": {
      "/hu": {
        "sequence": ["ctrl+shift+h", "ctrl+shift+u"],
        "description": "Hyphen to Underscore conversion"
      },
      "/uh": {
        "sequence": ["ctrl+shift+u", "ctrl+shift+h"],
        "description": "Underscore to Hyphen conversion"
      },
      "/hash": {
        "sequence": ["ctrl+shift+h", "ctrl+shift+h"],
        "description": "Hash (SHA-256)"
      },
      "/base64enc": {
        "sequence": ["ctrl+shift+b", "ctrl+shift+e"],
        "description": "Base64 Encode"
      },
      "/base64dec": {
        "sequence": ["ctrl+shift+b", "ctrl+shift+d"],
        "description": "Base64 Decode"
      },
      "/fh": {
        "sequence": ["ctrl+shift+f", "ctrl+shift+h"],
        "description": "Full-width to Half-width"
      },
      "/formatjson": {
        "sequence": ["ctrl+shift+f", "ctrl+shift+j"],
        "description": "Format JSON"
      }
    },
    "timeout": 2.0,
    "case_sensitive": false
  }
}