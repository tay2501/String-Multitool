{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "detailed": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(funcName)s:%(lineno)d - %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        },
        "simple": {
            "format": "%(levelname)s: %(message)s"
        },
        "debug": {
            "format": "[%(levelname)s] %(name)s.%(funcName)s:%(lineno)d - %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "debug",
            "stream": "ext://sys.stdout",
            "encoding": "utf-8"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "detailed",
            "filename": "logs/string_multitool.log",
            "maxBytes": 10485760,
            "backupCount": 5
        },
        "debug_file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "detailed",
            "filename": "logs/debug.log",
            "maxBytes": 5242880,
            "backupCount": 3
        }
    },
    "root": {
        "level": "DEBUG",
        "handlers": ["console", "file", "debug_file"]
    },
    "loggers": {
        "string_multitool": {
            "level": "DEBUG",
            "handlers": ["console", "file", "debug_file"],
            "propagate": false
        }
    }
}